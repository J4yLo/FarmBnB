<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeABooking3">

  <TextView
      android:id="@+id/date5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="56dp"
      android:text="Click On Date Above To Set Date"
      android:textSize="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/date4" />

  <TextView
      android:id="@+id/textView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:text="Set Departure"
      android:textSize="24dp"
      app:layout_constraintBottom_toTopOf="@+id/view10"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/date4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="64dp"
      android:text="Date of Departure:"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtSelectedAccomodation7" />

  <TextView
      android:id="@+id/txtSelectedAccomodation5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="68dp"
      android:text="Selected Accomodation"
      android:textSize="24dp"
      app:layout_constraintBottom_toTopOf="@+id/txtSelectedAccomodation2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view10" />

  <TextView
      android:id="@+id/txtSelectedAccomodation3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="Current Details"
      android:textSize="24dp"
      app:layout_constraintBottom_toTopOf="@+id/txtSelectedAccomodation5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.063"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view10"
      app:layout_constraintVertical_bias="0.208" />

  <TextView
      android:id="@+id/txtSelectedAccomodation7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="44dp"
      android:text="Selected Arrival Date"
      android:textSize="24dp"
      app:layout_constraintBottom_toTopOf="@+id/txtSelectedAccomodation2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtSelectedAccomodation5" />

  <Button
      android:id="@+id/btnConfirmBooking"
      android:layout_width="205dp"
      android:layout_height="87dp"
      android:layout_marginBottom="76dp"
      android:text="Confirm Booking"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/DepartureDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="72dp"
      android:onClick="openDatePicker"
      android:text="Departure Date"
      android:textSize="28dp"
      app:layout_constraintBottom_toTopOf="@+id/btnConfirmBooking"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/date5"
      app:layout_constraintVertical_bias="1.0" />

  <Button
      android:id="@+id/btnBack4"
      android:layout_width="43dp"
      android:layout_height="47dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="9dp"
      android:text="H"
      app:layout_constraintBottom_toTopOf="@+id/view9"
      app:layout_constraintEnd_toStartOf="@+id/textView11"
      app:layout_constraintHorizontal_bias="0.21"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <View
      android:id="@+id/view10"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.098" />

  <View
      android:id="@+id/view13"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.416" />

  <Button
      android:id="@+id/btnLogOut4"
      android:layout_width="113dp"
      android:layout_height="48dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="8dp"
      android:text="Log Out"
      app:layout_constraintBottom_toTopOf="@+id/view9"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/textView11"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>